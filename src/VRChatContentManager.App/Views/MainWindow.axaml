<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:VRChatContentManager.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VRChatContentManager.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        ExtendClientAreaToDecorationsHint="True" SystemDecorations="None"
        ExtendClientAreaChromeHints="NoChrome" ShowInTaskbar="True" Topmost="True"
        Opened="TopLevel_OnOpened" Width="420" Height="680"
        Icon="/Assets/avalonia-logo.ico"
        Title="VRChatContentManager.App">

    <dialogHostAvalonia:DialogHost Identifier="{Binding DialogHostId}">
        <TransitioningContentControl Content="{Binding CurrentPage}" />
    </dialogHostAvalonia:DialogHost>
</Window>