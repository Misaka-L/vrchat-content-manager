<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="VRChatContentManager.App.App"
             xmlns:local="using:VRChatContentManager.App"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:converters="clr-namespace:VRChatContentManager.App.Converters"
             RequestedThemeVariant="Default">

    <Application.Resources>
        <converters:ContentTypeIconConverter x:Key="ContentTypeIconConverter" />
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <themes:MaterialTheme BaseTheme="Inherit" PrimaryColor="Indigo" SecondaryColor="Indigo" />
        <avalonia:MaterialIconStyles />
        <dialogHostAvalonia:DialogHostStyles />
    </Application.Styles>
</Application>