<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dialogs="clr-namespace:VRChatContentManager.App.ViewModels.Dialogs"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="dialogs:RequestChallengeDialogViewModel"
             x:Class="VRChatContentManager.App.Dialogs.RequestChallengeDialog">

    <Interaction.Behaviors>
        <EventTriggerBehavior EventName="Loaded">
            <InvokeCommandAction Command="{Binding LoadCommand}" />
        </EventTriggerBehavior>
    </Interaction.Behaviors>

    <StackPanel Spacing="24" Margin="8">
        <StackPanel>
            <TextBlock Text="Identity Prompt" TextAlignment="Center" />
            <TextBlock Text="{Binding IdentityPrompt}" TextAlignment="Center"
                       FontSize="24" FontWeight="SemiBold" TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Finish challenge by enter this code" TextAlignment="Center"
                       FontSize="18" />
            <TextBlock Text="{Binding Code}" FontWeight="SemiBold" FontSize="36"
                       TextAlignment="Center" />
            <Button Content="{avalonia:MaterialIconTextExt Kind=ContentCopy, Text=Copy}"
                    Theme="{StaticResource MaterialFlatButton}"
                    HorizontalAlignment="Center">
                <Interaction.Behaviors>
                    <ButtonClickEventTriggerBehavior>
                        <SetClipboardTextAction Text="{Binding Code}" />
                    </ButtonClickEventTriggerBehavior>
                </Interaction.Behaviors>
            </Button>
        </StackPanel>
        <StackPanel Spacing="4">
            <avalonia:MaterialIcon Kind="Warning" Height="30" Width="30" />
            <TextBlock Text="Only Enter This Code When Challenge Was Requested By The Client You Trust."
                       TextWrapping="Wrap" TextAlignment="Center" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Challenge request from Client" TextAlignment="Center" />
            <TextBlock Text="{Binding ClientName}" TextAlignment="Center" FontWeight="Black" />
            <TextBlock Text="{Binding ClientId}" TextAlignment="Center" FontSize="12" Opacity="0.7" />
        </StackPanel>
        <Button Content="Close" Command="{Binding RequestCloseCommand}" />
    </StackPanel>
</UserControl>